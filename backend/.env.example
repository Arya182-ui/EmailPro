# Environment Configuration
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL="postgresql://username:password@localhost:5432/email_automation_db"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRES_IN=7d

# Email Configuration
SMTP_FROM_NAME="Email Automation Platform"
SMTP_FROM_EMAIL="noreply@yourdomain.com"

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR=./uploads

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Email Sending Limits
DEFAULT_DAILY_LIMIT=100
MIN_DELAY_BETWEEN_EMAILS=15  # seconds
MAX_DELAY_BETWEEN_EMAILS=20  # seconds
BATCH_SIZE_MIN=10  # emails per batch
BATCH_SIZE_MAX=15  # emails per batch
BATCH_BREAK_DURATION=120  # seconds (2 minutes)

# Campaign Settings
OFFICE_HOURS_START=9  # 9 AM
OFFICE_HOURS_END=17   # 5 PM
MAX_BOUNCE_RATE=5     # percentage

# Security
BCRYPT_ROUNDS=12
ENCRYPTION_KEY=your_32_character_encryption_key_here

# Monitoring
LOG_LEVEL=info