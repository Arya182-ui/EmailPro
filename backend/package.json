{
  "name": "email-automation-platform-backend",
  "version": "1.0.0",
  "description": "Email Automation Platform MVP - Backend API",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon src/server.ts",
    "build": "tsc && npx prisma generate",
    "build:production": "npm install && tsc && npx prisma generate && npx prisma migrate deploy",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "db:migrate": "npx prisma migrate dev",
    "db:reset": "npx prisma migrate reset",
    "db:seed": "ts-node src/scripts/seed.ts",
    "db:deploy": "npx prisma migrate deploy",
    "worker": "ts-node src/workers/email-worker.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.6.0",
    "bcryptjs": "^2.4.3",
    "bull": "^4.12.1",
    "cors": "^2.8.5",
    "cron": "^3.1.6",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "ioredis": "^5.3.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.3",
    "prisma": "^5.6.0",
    "redis": "^4.6.10",
    "socket.io": "^4.7.2",
    "validator": "^13.11.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
